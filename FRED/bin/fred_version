use strict;
use warnings;
use Env;

my $FRED = $ENV{FRED_HOME};
die "$0: Please set environmental variable FRED_HOME to location of FRED home directory\n" if not $FRED;

if (-e "$FRED/VERSION") {
   my $version = `cat $FRED/VERSION`;
   chomp $version;
   $version =~ s/\s//g;
   print "$version\n";
}
else {
  print "FRED/VERSION not found";
}
